# ==============================================
# EMS Platform - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# Required vars are marked with (REQUIRED)

# --- Database ---
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USER=ems_admin
DATABASE_PASSWORD=               # (REQUIRED) PostgreSQL password
DATABASE_NAME=ems_platform

# --- Authentication ---
JWT_SECRET=                      # (REQUIRED) Min 32 chars, used for signing JWTs
JWT_EXPIRES_IN=8h

# --- Licensing ---
LICENSE_SIGNING_SECRET=          # (REQUIRED) Min 32 chars, HMAC key for license keys

# --- Application ---
NODE_ENV=development             # development | production
PORT=3100

# --- CORS ---
CORS_ORIGINS=http://localhost:5173,http://localhost:3100

# --- Rate Limiting ---
THROTTLE_TTL=60                  # Window in seconds
THROTTLE_LIMIT=100               # Max requests per window

# --- SNMP ---
SNMP_MODE=simulation             # simulation | production

# --- Redis (future) ---
REDIS_HOST=localhost
REDIS_PORT=6379

# --- AWS Cloud Integration (optional) ---
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
